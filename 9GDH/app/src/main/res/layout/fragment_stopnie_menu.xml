<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StopnieMenuFragment"
    style="@style/scrollViewStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/textViewBigStyle"
            android:textSize="@dimen/text_extra_large_size"
            android:text="@string/stopnie_harcerskie"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/mlodzik_LinearLayout_StopnieMenuFragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintRight_toLeftOf="@id/wywiadowca_LinearLayout_StopnieMenuFragment"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/margin_regular_vertical"
                android:layout_marginBottom="@dimen/margin_regular_vertical"
                android:layout_marginRight="@dimen/margin_small_horizontal"
                android:layout_marginLeft="@dimen/margin_regular_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/frameBottomStyle"
                    android:padding="@dimen/padding_small">

                    <ImageButton
                        android:id="@+id/mlodzik_ImageButton_StopnieMenuFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/stopnie_mlodzik_v2"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/wywiadowca_LinearLayout_StopnieMenuFragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/mlodzik_LinearLayout_StopnieMenuFragment"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/margin_regular_vertical"
                android:layout_marginBottom="@dimen/margin_regular_vertical"
                android:layout_marginLeft="@dimen/margin_small_horizontal"
                android:layout_marginRight="@dimen/margin_regular_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/frameBottomStyle"
                    android:padding="@dimen/padding_small">

                    <ImageButton
                        android:id="@+id/wywiadowca_ImageButton_StopnieMenuFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/stopnie_wywiadowca_v2"/>
                </LinearLayout>


            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/cwik_LinearLayout_StopnieMenuFragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintRight_toLeftOf="@id/ho_LinearLayout_StopnieMenuFragment"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/margin_regular_vertical"
                android:layout_marginBottom="@dimen/margin_regular_vertical"
                android:layout_marginRight="@dimen/margin_small_horizontal"
                android:layout_marginLeft="@dimen/margin_regular_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/frameBottomStyle"
                    android:padding="@dimen/padding_small">

                    <ImageButton
                        android:id="@+id/cwik_ImageButton_StopnieMenuFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/stopnie_cwik_v2"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ho_LinearLayout_StopnieMenuFragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/cwik_LinearLayout_StopnieMenuFragment"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/margin_regular_vertical"
                android:layout_marginBottom="@dimen/margin_regular_vertical"
                android:layout_marginLeft="@dimen/margin_small_horizontal"
                android:layout_marginRight="@dimen/margin_regular_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/frameBottomStyle"
                    android:padding="@dimen/padding_small">

                    <ImageButton
                        android:id="@+id/ho_ImageButton_StopnieMenuFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/stopnie_ho_v2"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/hr_LinearLayout_StopnieMenuFragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintRight_toLeftOf="@id/buffer_Space_StopnieMenuFragment"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/margin_regular_vertical"
                android:layout_marginBottom="@dimen/margin_regular_vertical"
                android:layout_marginRight="@dimen/margin_small_horizontal"
                android:layout_marginLeft="@dimen/margin_regular_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/padding_small"
                    style="@style/frameBottomStyle">

                    <ImageButton
                        android:id="@+id/hr_ImageButton_StopnieMenuFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/stopnie_hr_v2"/>
                </LinearLayout>
            </LinearLayout>

            <Space
                android:id="@+id/buffer_Space_StopnieMenuFragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/hr_LinearLayout_StopnieMenuFragment"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="20dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/textViewBigStyle"
            android:text="Stopnie Instruktorskie"
            android:textSize="30dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/pwd_LinearLayout_StopnieMenuFragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintRight_toLeftOf="@id/phm_LinearLayout_StopnieMenuFragment"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/margin_regular_vertical"
                android:layout_marginBottom="@dimen/margin_regular_vertical"
                android:layout_marginRight="@dimen/margin_small_horizontal"
                android:layout_marginLeft="@dimen/margin_regular_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/padding_small"
                    style="@style/frameBottomStyle">

                    <ImageButton
                        android:id="@+id/pwd_ImageButton_StopnieMenuFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/stopnie_pwd"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/phm_LinearLayout_StopnieMenuFragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/pwd_LinearLayout_StopnieMenuFragment"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/margin_regular_vertical"
                android:layout_marginBottom="@dimen/margin_regular_vertical"
                android:layout_marginLeft="@dimen/margin_small_horizontal"
                android:layout_marginRight="@dimen/margin_regular_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/padding_small"
                    style="@style/frameBottomStyle">

                    <ImageButton
                        android:id="@+id/phm_ImageButton_StopnieMenuFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/stopnie_phm"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/hm_LinearLayout_StopnieMenuFragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintRight_toLeftOf="@id/buffer2_space_StopnieMenuFragment"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/margin_regular_vertical"
                android:layout_marginBottom="@dimen/margin_regular_vertical"
                android:layout_marginRight="@dimen/margin_small_horizontal"
                android:layout_marginLeft="@dimen/margin_regular_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/padding_small"
                    style="@style/frameBottomStyle">

                    <ImageButton
                        android:id="@+id/hm_ImageButton_StopnieMenuFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/stopnie_hm"/>
                </LinearLayout>
            </LinearLayout>

            <Space
                android:id="@+id/buffer2_space_StopnieMenuFragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/hm_LinearLayout_StopnieMenuFragment"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="20dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</ScrollView>