<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    style="@style/fragmentStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/logo_ImageView_MainActivity"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/logo"/>

        <TextView
            android:id="@+id/title_TextView_MainActivity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            style="@style/textViewBigStyle"
            android:padding="0dp"
            android:textSize="20sp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:text="@string/dziewiec_gdh"
            android:textAlignment="viewStart"
            android:layout_marginLeft="0dp"/>
    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/frame_FragmentContainerView_MainActivity"
        android:name="com.app.a9gdh.MenuFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/szyfry_Button_MainActivity"
        style="@style/buttonGenericStyle"
        android:layout_marginTop="40dp"
        android:drawableLeft="@drawable/ic_key"
        android:text="@string/encryption_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/prawo_Button_MainActivity"
        style="@style/buttonGenericStyle"
        android:layout_marginTop="40dp"
        android:drawableLeft="@drawable/ic_book"
        android:text="@string/prawo_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/szyfry_Button_MainActivity" />
</LinearLayout>