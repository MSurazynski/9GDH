<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SzyfryFragment"
    style="@style/fragmentStyle"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/gadery_Button_SzyfyrFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/buttonAccentStyle"
                    android:text="Gadery Poluki"
                    android:textSize="@dimen/text_regular_size"
                    android:layout_marginRight="@dimen/margin_small_horizontal"/>

                <Button
                    android:id="@+id/polityka_Button_SzyfyrFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/buttonBottomStyle"
                    android:text="Polityka Renu"
                    android:textSize="@dimen/text_regular_size"
                    android:layout_marginRight="@dimen/margin_small_horizontal"
                    android:layout_marginLeft="@dimen/margin_small_horizontal"/>

                <Button
                    android:id="@+id/malinowe_Button_SzyfyrFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/buttonBottomStyle"
                    android:text="Malinowe Buty"
                    android:textSize="@dimen/text_regular_size"
                    android:layout_marginRight="@dimen/margin_small_horizontal"
                    android:layout_marginLeft="@dimen/margin_small_horizontal"/>

                <Button
                    android:id="@+id/cezar_Button_SzyfyrFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/buttonBottomStyle"
                    android:text="Cezar"
                    android:textSize="@dimen/text_regular_size"
                    android:layout_marginRight="@dimen/margin_small_horizontal"
                    android:layout_marginLeft="@dimen/margin_small_horizontal"/>

                <Button
                    android:id="@+id/mors_Button_SzyfyrFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/buttonBottomStyle"
                    android:text="Mors"
                    android:textSize="@dimen/text_regular_size"
                    android:layout_marginLeft="@dimen/margin_small_horizontal"/>

            </LinearLayout>


        </HorizontalScrollView>

    </ScrollView>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/container_FragmentContainerView_SzyfryFragment"
        android:name="com.app.a9gdh.GaderyFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        style="@style/marginStyle"/>
</LinearLayout>