<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none"
    style="@style/fragmentStyle"
    tools:context=".CezarFragment">

    <EditText
        android:id="@+id/encoded_TextView_CezarFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        style="@style/textViewRegularBackgroundTopStyle"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:padding="@dimen/padding_regular"
        android:gravity="top"
        android:hint="@string/zaszyfrowana_wiadomosc"
        android:inputType="none"
        android:editable="false"
        android:clickable="false"
        android:text=""/>

    <EditText
        android:id="@+id/toEncode_EditText_CezarFragment"
        style="@style/textViewRegularBackgroundBottomStyle"
        android:padding="@dimen/padding_regular"
        android:layout_width="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:hint="@string/wpisz_wiadomosc"
        android:gravity="top"
        android:text=""/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        style="@style/frameBottomStyle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            style="@style/marginStyle">

            <ImageButton
                android:id="@+id/left_Button_CezarFragment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/buttonAccentStyle"
                android:layout_gravity="center"
                android:layout_marginRight="0dp"
                android:layout_margin="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:padding="@dimen/padding_regular"
                android:text=""
                android:background="@drawable/rec_rad_20dp"
                android:src="@drawable/ic_left_arrow"/>

            <TextView
                android:id="@+id/shift_TextView_CezarFragment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:padding="@dimen/padding_small"
                style="@style/textViewSmallBackgroundTopStyle"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_marginLeft="@dimen/margin_regular_horizontal"
                android:layout_marginRight="@dimen/margin_regular_horizontal"
                android:text="W prawo o 3"/>

            <ImageButton
                android:id="@+id/right_Button_CezarFragment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/buttonAccentStyle"
                android:layout_gravity="center"
                android:layout_marginRight="0dp"
                android:layout_margin="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:padding="@dimen/padding_regular"
                android:text=""
                android:background="@drawable/rec_rad_20dp"
                android:src="@drawable/ic_right_arrow"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>